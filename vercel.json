{
  "version": 2,
  "github": {
    "enabled": true
  },
  "builds": [
    {
      "src": "apps/auth/**/*",
      "use": "@vercel/node"
    },
    {
      "src": "apps/chat/**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",
      "dest": "apps/auth/main.ts",
      "methods": ["GET", "POST", "PATCH", "PUT", "DELETE"]
    },
    {
      "src": "/chats/(.*)",
      "dest": "apps/chat/main.ts", 
      "methods": ["GET", "POST", "PATCH", "PUT", "DELETE"]
    }
  ]
}
